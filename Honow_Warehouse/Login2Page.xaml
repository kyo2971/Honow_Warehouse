<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Honow_Warehouse.Login2Page"
             Title="Login2Page">
    <StackLayout Padding="10" Spacing="10" HorizontalOptions="Fill">
        <Image Source="dotnet_bot.png" HeightRequest="150" WidthRequest="150" />

        <Entry x:Name="txtUserName" Placeholder="使用者名稱"
               TextColor="#000"
               PlaceholderColor="#154360"/>
        
        <Entry x:Name="txtPassword" Placeholder="密碼"
               TextColor="#000"
               PlaceholderColor="#154360"/>

        <Button x:Name="btnLogin"
                Text="Login" 
                BackgroundColor="Transparent"
                TextColor="#154360"
                BorderColor="#154360"
                CornerRadius="10"
                BorderWidth="1.5"
                FontAttributes="Bold"
                VerticalOptions="Center"
                Clicked="btnLogin_Clicked"/>
    </StackLayout>
</ContentPage>